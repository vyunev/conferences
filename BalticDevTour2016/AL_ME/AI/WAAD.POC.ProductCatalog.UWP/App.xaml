<Application
    x:Class="WAAD.POC.ProductCatalog.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Branding/CustomTemplates.xaml" />
                <ResourceDictionary Source="Branding/CustomStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <!-- Application-specific resources -->
            <SolidColorBrush x:Key="FlyoutBackgroundThemeBrush" Color="#ff224574" />
            <SolidColorBrush x:Key="HeroBackgroundThemeBrush" Color="#ff224574" />
            <SolidColorBrush x:Key="HeroForegroundThemeBrush" Color="#ffffffff" />
            <x:String x:Key="AppName">Contoso Electronics</x:String>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
