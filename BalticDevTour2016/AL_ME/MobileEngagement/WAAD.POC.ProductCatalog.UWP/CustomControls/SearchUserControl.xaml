<UserControl
    x:Class="WAAD.POC.ProductCatalog.UWP.CustomControls.SearchUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="48"
    d:DesignWidth="400">

    <Grid Background="{StaticResource LightGreyBrush}">
        <AutoSuggestBox x:Name="txtSearch" HorizontalAlignment="Stretch" 
                       VerticalAlignment="Center" PlaceholderText="Search for a product..." Margin="20,0,20,0"  >
            <AutoSuggestBox.QueryIcon>
                <SymbolIcon Symbol="Find" Foreground="Black"/>
            </AutoSuggestBox.QueryIcon>
        </AutoSuggestBox>
    </Grid>
</UserControl>